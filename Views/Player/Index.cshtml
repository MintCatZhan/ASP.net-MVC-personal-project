@model IEnumerable<hdSection.Models.Player>
@Scripts.Render("~/Scripts/myScript/myScript1.js")

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Player</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="data">
    <thead class="ui-widget-header">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comments)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Account_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comments)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Game.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.PlayerID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.PlayerID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.PlayerID })
                </td>
            </tr>
        }
    </tbody>
</table>
